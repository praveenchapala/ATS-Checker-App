{
  "name": "ats-checker-app",
  "version": "1.0.0",
  "description": "An ATS (Applicant Tracking System) checker app that analyzes resumes for ATS compatibility",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "publish:docs": "node scripts/publish-docs.js",
    "deploy:pages": "npm run build && node scripts/publish-docs.js"
  },
  "keywords": ["ats", "resume", "checker", "applicant-tracking-system"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 